<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_16dp">

        <!-- 顶部标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_24dp"
            android:text="@string/features_title"
            android:textAppearance="@style/TextAppearance.Smarthome.Headline1"
            android:textColor="?attr/colorOnBackground" />

        <!-- 设备控制卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_device_control"
            style="@style/Widget.Smarthome.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_16dp">

                <ImageView
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/space_16dp"
                    android:src="@drawable/ic_device_outlined"
                    app:tint="?attr/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/device_control"
                        android:textAppearance="@style/TextAppearance.Smarthome.Headline3"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_4dp"
                        android:text="管理和控制智能设备"
                        android:textAppearance="@style/TextAppearance.Smarthome.Caption"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 传感数据卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_sensor_data"
            style="@style/Widget.Smarthome.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_16dp">

                <ImageView
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/space_16dp"
                    android:src="@drawable/ic_sensor_outlined"
                    app:tint="?attr/colorSecondary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sensor_data"
                        android:textAppearance="@style/TextAppearance.Smarthome.Headline3"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_4dp"
                        android:text="查看传感器历史数据和图表"
                        android:textAppearance="@style/TextAppearance.Smarthome.Caption"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 场景联动卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_scene_automation"
            style="@style/Widget.Smarthome.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_16dp">

                <ImageView
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/space_16dp"
                    android:src="@drawable/ic_automation_outlined"
                    app:tint="?attr/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/scene_automation"
                        android:textAppearance="@style/TextAppearance.Smarthome.Headline3"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_4dp"
                        android:text="配置智能场景和自动化规则"
                        android:textAppearance="@style/TextAppearance.Smarthome.Caption"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 安防事件卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_security_events"
            style="@style/Widget.Smarthome.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_16dp">

                <ImageView
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/space_16dp"
                    android:src="@drawable/ic_security_outlined"
                    app:tint="?attr/colorError" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/security_events"
                        android:textAppearance="@style/TextAppearance.Smarthome.Headline3"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_4dp"
                        android:text="查看和处理安防事件"
                        android:textAppearance="@style/TextAppearance.Smarthome.Caption"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>