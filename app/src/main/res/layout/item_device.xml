<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="device"
            type="com.example.smarthome.model.DeviceItem" />
        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />
    </data>
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{onClickListener}"
        app:cardBackgroundColor="@color/md_theme_light_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:rippleColor="@color/md_theme_light_onSurfaceVariant">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 设备图标和状态 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_device_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/device_icon_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 设备状态指示器 -->
                <View
                    android:id="@+id/view_status_indicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/ic_status_online"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/image_view_device_icon"
                    app:layout_constraintEnd_toEndOf="@id/image_view_device_icon"
                    app:layout_constraintStart_toEndOf="@id/image_view_device_icon"
                    app:layout_constraintTop_toTopOf="@id/image_view_device_icon" />

                <!-- 设备图标 -->
                <ImageView
                    android:id="@+id/image_view_device_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_lightbulb"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 设备信息 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@id/constraint_layout_device_icon"
                app:layout_constraintEnd_toStartOf="@id/switch_device"
                app:layout_constraintStart_toEndOf="@id/constraint_layout_device_icon"
                app:layout_constraintTop_toTopOf="@id/constraint_layout_device_icon">

                <!-- 设备名称 -->
                <TextView
                    android:id="@+id/text_view_device_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="客厅灯"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onSurface"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 设备类型和状态 -->
                <TextView
                    android:id="@+id/text_view_device_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_device_name"
                    tools:text="灯具, 在线" />

                <!-- 设备最新数据 (仅传感器) -->
                <TextView
                    android:id="@+id/text_view_device_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_light_primary"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_device_type"
                    tools:text="温度: 25.5°C, 湿度: 45%" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 设备开关 -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/constraint_layout_device_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/constraint_layout_device_icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>