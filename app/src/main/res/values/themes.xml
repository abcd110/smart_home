<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Light) -->
    <style name="Theme.Smarthome" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">#F8FBFF</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">#F8FBFF</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <!-- Disable tonal surface overlay to avoid color tinting -->
        <item name="colorOnTertiary">@color/md_theme_light_onSurface</item>
        <item name="colorTertiaryContainer">#F8FBFF</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onSurface</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSurface</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onSurface</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onSurface</item>
        <item name="colorSecondaryContainer">#F8FBFF</item>
        <item name="colorPrimaryContainer">#F8FBFF</item>
        <item name="colorErrorContainer">#F8FBFF</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">#F8FBFF</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">#F8FBFF</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Explicitly disable ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.Smarthome.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="cardElevation">@dimen/card_elevation_small</item>
        <item name="cardBackgroundColor">#F8FBFF</item>
        <item name="android:background">#F8FBFF</item>
        <!-- 完全禁用Material Design 3的tonal surface效果 -->
        <item name="colorSurface">#F8FBFF</item>
        <item name="colorSurfaceVariant">#F8FBFF</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <item name="android:colorForeground">@android:color/transparent</item>
        <item name="android:colorBackground">#F8FBFF</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="strokeColor">#F8FBFF</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Welcome Card Style -->
    <style name="Widget.Smarthome.Card.Welcome" parent="Widget.Smarthome.Card">
        <item name="cardCornerRadius">@dimen/corner_radius_large</item>
        <item name="cardElevation">@dimen/card_elevation_small</item>
        <item name="cardBackgroundColor">#F8FBFF</item>
        <item name="android:background">#F8FBFF</item>
    </style>

    <!-- Pattern Card Style -->
    <style name="Widget.Smarthome.Card.Pattern" parent="Widget.Smarthome.Card">
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="cardElevation">@dimen/card_elevation_small</item>
        <item name="cardBackgroundColor">#F8FBFF</item>
        <item name="android:background">#F8FBFF</item>
    </style>

    <!-- Room Card Style -->
    <style name="Widget.Smarthome.Card.Room" parent="Widget.Smarthome.Card">
        <item name="cardCornerRadius">@dimen/corner_radius_large</item>
        <item name="cardElevation">@dimen/card_elevation_small</item>
        <item name="cardBackgroundColor">#F8FBFF</item>
        <item name="android:background">#F8FBFF</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Smarthome.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>

    <style name="Widget.Smarthome.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>

    <!-- Text Appearance Styles -->
    <style name="TextAppearance.Smarthome.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Smarthome.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Smarthome.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Smarthome.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="TextAppearance.Smarthome.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.Smarthome.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="android:background">#F8FBFF</item>
        <item name="elevation">@dimen/card_elevation_medium</item>
    </style>
</resources>